<%- include ../layouts/header.ejs %>

<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>

<form action="/log/add" method="post" name="form1">
    <table width="25%" border="0">
        <tr>
            <td>Serial</td>
            <td><input type="text" name="serial" id="serial" value="<%= serial %>" /></td>
        </tr>
        <tr>
            <td>Message</td>
            <td><input type="text" name="message" id="message" value="<%= message %>" /></td>
        </tr>
    </table>
</form>

<%- include ../layouts/footer.ejs %>